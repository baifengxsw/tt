<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.itcast.erp.entity.Menu" table="menu" >
        <id name="menuid" >
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"> <param name="sequence_name">menu_seq</param> </generator>
        </id>

        <property name="menuname" /> 
        <property name="icon" /> 
        <property name="url" /> 
        
        <!-- 自关联 -->
        <bag name="menus" order-by="menuid">
        	<key column="pid"></key>
        	<one-to-many class="cn.itcast.erp.entity.Menu"/>
        </bag>
 
    </class>
</hibernate-mapping>
